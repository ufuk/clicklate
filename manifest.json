{
	"name": "TurengCM",
	"version": "1.0",
	"manifest_version": 2,
	"description": "Tureng.com sağ tık menüsü çeviri uzantısı",
	"background": {
		"persistent": false,
		"scripts": [
			"main.js",
			"balloon.js",
			"jquery-2.0.0.js"
		]
	},
	"web_accessible_resources": [
		"ajax-loader.gif"
	],
	"permissions": [
		"http://*/*",
		"https://*/*",
		"file:///*/*",
		"contextMenus",
		"tabs"
  	],
  	"icons": {
  		"16": "tureng-icon-bitty.png",
    	"48": "tureng-icon-small.png",
    	"128": "tureng-icon-large.png"
	}
}