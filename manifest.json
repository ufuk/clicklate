{
  "name": "Clicklate",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Sağ tık menüsü çeviri uzantısı",
  "background": {
    "persistent": false,
    "scripts": [
      "main.js",
      "balloon.js",
      "jquery.min.js"
    ]
  },
  "web_accessible_resources": [
    "preloader.gif"
  ],
  "permissions": [
    "http://*/*",
    "https://*/*",
    "file:///*/*",
    "contextMenus",
    "tabs"
  ],
  "icons": {
    "16": "clicklate-logo-16.png",
    "48": "clicklate-logo-48.png",
    "128": "clicklate-logo-128.png"
  }
}